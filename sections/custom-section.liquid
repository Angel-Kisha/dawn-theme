<h1>{{ section.settings.text }}</h1>

{% for block in section.blocks %}
    {% if block.type == "social" %}
         <a href="{{ block.settings.url }}">{{ block.settings.text }}</a>
    {% endif %}
{% endfor %}

{% for block in section.blocks %}
    {% if block.type == 'paragraph' %}
        <p>{{ block.settings.text }}</p>
    {% endif %}
   
{% endfor %}

{%  schema  %} 
{
    "name": "Custom Section",
    "settings": [
        {
            "type": "text",
            "id": "text",
            "label": "Text"
        }
    ],
    "presets": [
        {
            "name": "Default custom section"
        }
    ],
    "tag": "header",
    "class": "custom-section",
    "blocks": [
        {
            "name": "Social link",
            "type": "social",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "URL"
                }
            ]
        },
        {
            "name": "Paragraph",
            "type": "paragraph",
            "settings": [
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }
    ]
}
{% endschema %}