<div class="custom-section" style="background-color: {{ section.settings.bgcolor }};">
    <h1 style="color: {{ section.settings.color }}">{{ section.settings.text }}</h1>
    <p>{{ 'text' | t }}</p>
    {% for block in section.blocks %}
        {% if block.type == "social" %}
             <a href="{{ block.settings.url }}">{{ block.settings.text }}</a>
        {% endif %}
    {% endfor %}
    
    {% for block in section.blocks %}
        {% if block.type == 'paragraph' %}
            <p>{{ block.settings.text }}</p>
        {% endif %}
    {% endfor %}
</div>

{% stylesheet %}
    .custom-section{
        padding: 0 60px;
    }
{% endstylesheet %}

{%  schema  %} 
{
    "name": "Custom Section",
    "settings": [
        {
            "type": "text",
            "id": "text",
            "label": "Text"
        },
        {
            "type": "color",
            "id": "color",
            "label": "Text color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "bgcolor",
            "label": "Background color",
            "default": "#f2f2f2"
        }

    ],
    "presets": [
        {
            "name": "Default custom section",
            "settings": {
                "text": "Default text"
            },
            "blocks": [
                {
                    "type": "paragraph"
                },
                {
                    "type": "social",
                    "settings": {
                        "url": "https://twitter.com",
                        "text": "Twitter"
                    }
                }
            ]
        },
        {
            "name": "Red custom section",
            "settings": {
                "text": "Red text"
            }
        }
    ],
    "tag": "header",
    "class": "custom-section",
    "blocks": [
        {
            "name": "Social link",
            "type": "social",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "URL"
                }
            ]
        },
        {
            "name": "Paragraph",
            "type": "paragraph",
            "settings": [
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }  
    ],
    "max_blocks": 4,
    "locales": {
        "en": {
            "text": "Hello"
        },
        "es":{
            "text": "Hola"
        }
    }
}
{% endschema %}