{% schema %}
{
    "name": "Home Showcase",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "HELPING YOU CREATE A HOME YOU WANT TO RETURN TO."
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "帰りたくなる家づくり"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        }
        ],
        "presets": [
            {
                "name": "Home Showcase",
                "category": "Custom"
            }
        ]
}
{% endschema %}

<div class="home-showcase">
    <div class="home-showcase__text-container">
        <h2 class="home-showcase__heading">{{ section.settings.heading }}</h2>
        <p class="home-showcase__subheading">{{ section.settings.subheading }}</p>
    </div>

    <div class="home-showcase__images">
        <div class="">
            {% if section.settings.left_image %}
                <img src="{{ section.settings.left_image | image_url: 'master' }}" alt="left image" loading="lazy" width="40px" height="50px">
                
            {% endif %}
        </div>
        <div>
            {% if section.settings.right_image %}
                <img src="{{ section.settings.right_image | image_url: 'master' }}" alt="left image" loading="lazy" width="40px" height="50px">
            {% endif %}
        </div>
    </div>
</div>

{% style %}
    .home-showcase{
        padding: 60px 20px;
        max-width: 1200px;
        margin 0 auto;
    }

    .home-showcase__text-container{
        max-width: 500px;
        margin-bottom: 40px;
    }

    .home-showcase__heading{
        font-size: 32px;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .home-showcase__images {
        display: flex;
        gap: 20px;
    }
{% endstyle %}