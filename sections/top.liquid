{% schema %}
{
    "name": "Home Showcase",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "HELPING YOU CREATE A HOME YOU WANT TO RETURN TO."
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "帰りたくなる家づくり"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        }
        ],
        "blocks": [
            {
                "type": "buttons",
                "name": "t:sections.top.blocks.buttons.name",
                "settings": [
                    {
                        "type": "header",
                        "content": "t:sections.top.blocks.buttons.settings.content"
                    },
                    {
                        "type": "text",
                        "id": "button_label",
                        "default": "t:sections.top.blocks.buttons.settings.button_label.default",
                        "label": "t:sections.top.blocks.buttons.settings.button_label.label",
                        "info": "t:sections.top.blocks.buttons.settings.button_label.info"
                    },
                    {
                        "type": "url",
                        "id": "button_link",
                        "label": "t:sections.top.blocks.buttons.settings.button_link.label"
                    },
                    {
                        "type": "checkbox",
                        "id": "button_style",
                        "default": false,
                        "label": "t:sections.top.blocks.buttons.settings.button_style.label"
                    }

                ]
            }

        ],
        "presets": [
            {
                "name": "Home Showcase",
                "category": "Custom",
                "blocks": [
                    {
                        "type": "buttons"
                    }
                ]
            }
        ]
}
{% endschema %}

<div class="home-showcase">
    <div class="home-showcase__text-container">
        <h2 class="home-showcase__heading">{{ section.settings.heading }}</h2>
        <p class="home-showcase__subheading">{{ section.settings.subheading }}</p>
    </div>

    <div class="home-showcase__images">
        <div class="home-showcase__image-left">
            {% if section.settings.left_image %}
                <img src="{{ section.settings.left_image |   image_url  }}" alt="left image" loading="lazy" width="40px" height="50px">
                
            {% endif %}
        </div>
        <div class="home-showcase__image-right">
            {% if section.settings.right_image %}
                <img src="{{ section.settings.right_image | image_url }}" alt="right image" loading="lazy" width="40px" height="50px">
            {% endif %}

            <div>
                <button type="submit"></button>
            </div>
        </div>
    </div>
</div>

{% style %}
    .home-showcase{
        padding: 60px 20px;
        max-width: 1200px;
        margin 0 auto;
    }

    .home-showcase__text-container{
        max-width: 500px;
        margin-bottom: 40px;
    }

    .home-showcase__heading{
        font-size: 32px;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .home-showcase__images {
        display: flex;
        gap: 20px;
    }

    .home-showcase__image-left,
    .home-showcase__image-right {
        flex: 1;
  }
  
    .home-showcase__image-left img,
    .home-showcase__image-right img {
        width: 100%;
        height: auto;
        display: block;
  }
{% endstyle %}