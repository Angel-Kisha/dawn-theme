{% schema %}
{
    "name": "Home Showcase",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "HELPING YOU CREATE A HOME YOU WANT TO RETURN TO."
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading",
            "default": "帰りたくなる家づくり"
        },
        {
            "type": "image_picker",
            "id": "left_image",
            "label": "Left Image"
        },
        {
            "type": "image_picker",
            "id": "right_image",
            "label": "Right Image"
        }
        ],
        "presets": [
            {
                "name": "Home Showcase",
                "category": "Custom"
            }
        ]
}
{% endschema %}

<div>
    <div>
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
    </div>

    <div>
        <div>
            {% if section.settings.left_image %}
                <img src="{{ section.settings.left_image | image_url: 'master' }}" alt="left image" loading="lazy" width="40px" height="50px">
                
            {% endif %}
        </div>
        <div>
            {% if section.settings.right_image %}
                <img src="{{ section.settings.right_image | image_url: 'master' }}" alt="left image" loading="lazy" width="40px" height="50px">
                
            {% endif %}
        </div>
    </div>
</div>